<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".PositionSensor">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="377dp"
        android:layout_height="137dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="96dp"
        android:fontFamily="@font/aclonica"
        android:text="Above are all the Position Sensor available in this device. Click to use the senor. \n You have option to change the Unit of Measurement."
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView_environmental"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/senso_Infor_text"
        android:layout_width="329dp"
        android:layout_height="120dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="@string/txt_position"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView_positionSensor"
        android:layout_width="386dp"
        android:layout_height="317dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="278dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>